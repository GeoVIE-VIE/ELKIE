{
  "index_patterns": ["suricata-*"],
  "priority": 100,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "refresh_interval": "5s",
      "codec": "best_compression"
    },
    "mappings": {
      "dynamic": false,
      "properties": {
        "@timestamp": { "type": "date" },
        "event_type": { "type": "keyword" },
        "src_ip": { "type": "ip" },
        "dest_ip": { "type": "ip" },
        "src_port": { "type": "integer" },
        "dest_port": { "type": "integer" },
        "proto": { "type": "keyword" },
        "dns": { "dynamic": false, "properties": { "rrname": { "type": "keyword" } } },
        "http": { "dynamic": false, "properties": { "hostname": { "type": "keyword" } } },
        "tls": { "dynamic": false, "properties": { "sni": { "type": "keyword" } } },
        "flow": { "dynamic": false, "properties": {
          "bytes_toserver": { "type": "long" },
          "bytes_toclient": { "type": "long" }
        }},
        "alert": { "dynamic": false, "properties": {
          "signature": { "type": "keyword" },
          "category": { "type": "keyword" },
          "severity": { "type": "integer" }
        }},
        "source": { "dynamic": false, "properties": { "geo": { "dynamic": false, "properties": {
          "location": { "type": "geo_point" },
          "city_name": { "type": "keyword" },
          "country_name": { "type": "keyword" }
        }}}},
        "destination": { "dynamic": false, "properties": { "geo": { "dynamic": false, "properties": {
          "location": { "type": "geo_point" },
          "city_name": { "type": "keyword" },
          "country_name": { "type": "keyword" }
        }}}}
      }
    }
  }
}
